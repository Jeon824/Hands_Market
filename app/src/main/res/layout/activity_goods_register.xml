<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GoodsRegisterActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <TextView
            android:id="@+id/goodsRegistMainText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="물품 등록하기"
            android:textColor="#000000"
            android:gravity="center"
            android:textSize="25dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/goodsRegGoodsNamText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingRight="10dp"
                    android:text="제품 이름 "
                    android:textColor="#FF000000"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_border" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="319dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/goodsRegStoreImgText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingRight="10dp"
                    android:text="매장 이미지 "
                    android:textColor="#FF000000"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/goodsRegStoreImgBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/click_button"
                    android:clickable="true"
                    android:paddingRight="10dp"
                    android:text="첨부 파일"
                    android:textColor="#000000"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/goodsRegPriceText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingRight="10dp"
                    android:text="가격"
                    android:textColor="#FF000000"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_border" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="20dp"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/goodsRegSizeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingRight="10dp"
                    android:text="사이즈"
                    android:textColor="#FF000000"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_border" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp" >

                <TextView
                    android:id="@+id/goodsRegColorText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingRight="10dp"
                    android:text="색"
                    android:textColor="#FF000000"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_border" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="315dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:paddingBottom="10dp">

                <TextView
                    android:id="@+id/goodsRegaQuaText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingRight="10dp"
                    android:text="수량"
                    android:textColor="#FF000000"
                    android:textSize="20sp" />

                <EditText
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:background="@drawable/input_border" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/goodsCreateBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginTop="20px"
            android:layout_marginBottom="200px"
            android:background="@drawable/click_button"
            android:text="등록"
            android:textColor="#000000"
            android:textSize="40px"
            tools:layout_editor_absoluteX="155dp"
            tools:layout_editor_absoluteY="533dp" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/goodsRegister_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/navigation2" />

</androidx.constraintlayout.widget.ConstraintLayout>
