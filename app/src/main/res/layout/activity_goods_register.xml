<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GoodsRegisterActivity">

    <TextView
        android:id="@+id/goodsRegistMainText"
        android:layout_width="match_parent"
        android:layout_height="84dp"
        android:gravity="center"
        android:text="물품 등록하기"
        android:textColor="#000000"
        android:textSize="25dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >


        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="14dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goodsRegGoodsNamText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingRight="10dp"
                android:text="제품 이름 "
                android:textColor="#FF000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/goodsName"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/input_border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="14dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goodsRegStoreImgText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingRight="10dp"
                android:text="매장 이미지 "
                android:textColor="#FF000000"
                android:textSize="18dp" />

            <Button
                android:id="@+id/goodsRegStoreImgBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/click_button"
                android:clickable="true"
                android:paddingRight="10dp"
                android:text="첨부 파일"
                android:textColor="#000000"
                android:textSize="18dp" />
            <ImageView
                android:id="@+id/showGoodsImg"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="14dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goodsRegPriceText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingRight="10dp"
                android:text="가격"
                android:textColor="#FF000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/goodsPrice"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/input_border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="14dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goodsRegSizeText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingRight="10dp"
                android:text="사이즈"
                android:textColor="#FF000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/goodsSize"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/input_border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="14dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goodsRegColorText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingRight="10dp"
                android:text="색"
                android:textColor="#FF000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/goodsColor"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/input_border" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingBottom="14dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goodsRegaQuaText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingRight="10dp"
                android:text="수량"
                android:textColor="#FF000000"
                android:textSize="18dp" />

            <EditText
                android:id="@+id/goodsCount"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:background="@drawable/input_border" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingBottom="14dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/goodsCreateBtn"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:background="@drawable/click_button"
            android:text="등록"
            android:textColor="#000000"
            android:textSize="18dp" />
    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/goodsRegister_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:menu="@menu/navigation2" />

</LinearLayout>
