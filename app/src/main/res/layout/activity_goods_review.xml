<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".GoodsReviewActivity">

    <TextView
        android:id="@+id/goodsRevMainTitleText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:text="리뷰 작성하기"
        android:textColor="#000000"
        android:textSize="26dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="6dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goodsRevGoodsNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:layout_gravity="center"
                android:paddingRight="15dp"
                android:textColor="#FF000000"
                android:textSize="20dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goodsRevTitleText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:text="제목 "
                android:textColor="#FF000000"
                android:textSize="18dp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:background="@drawable/input_border"
                android:id="@+id/reviewTitle"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goodsRevStarScoreText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingRight="10dp"
                android:layout_gravity="center"
                android:text="별점"
                android:textColor="#FF000000"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/goodsRevSpinner"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true" >
            </Spinner>

        </LinearLayout>

        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/goodsRevContentText"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:paddingRight="10dp"
                android:text="내용"
                android:layout_gravity="center"
                android:textColor="#FF000000"
                android:textSize="18dp" />

            <EditText
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:background="@drawable/input_border"
                android:id="@+id/reviewBody"/>
        </LinearLayout>

