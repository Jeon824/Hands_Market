<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".StoreRegistActivity">

    <TextView
        android:id="@+id/storeRegistMainText"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="18dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="마켓 등록하기"
        android:textColor="#000000"
        android:textSize="26dp" />

    <LinearLayout
        android:background="@drawable/input_border"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="36dp"
            android:paddingBottom="18dp"
            android:paddingLeft="4dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/storeRegNameText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:clickable="true"
                android:text="마켓 이름 "
                android:textColor="#FF000000"
                android:textSize="20dp" />

            <EditText
                android:id="@+id/market_name"
                android:background="@drawable/input_border"
                android:layout_width="200dp"
                android:layout_height="46dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:paddingLeft="4dp"
            android:orientation="horizontal" >

            <EditText
                android:id="@+id/register_main_address"
                android:background="@drawable/input_border"
                android:layout_width="180dp"
                android:layout_height="46dp"
                android:layout_marginRight="10dp"
                android:inputType="textAutoComplete"/>

            <Button
                android:id="@+id/storeRegSearchAddressBtn"
                android:background="@drawable/click_button"
                android:layout_width="114dp"
                android:layout_height="46dp"
                android:clickable="true"
                android:text="주소 검색"
                android:textSize="18dp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="18dp"
            android:paddingBottom="18dp"
            android:paddingLeft="4dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/storeRegImgText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:clickable="true"
                android:text="매장 이미지 "
                android:textColor="#FF000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/storeRegImgBtn"
                android:background="@drawable/click_button"
                android:layout_width="114dp"
                android:layout_height="46dp"
                android:clickable="true"
                android:text="첨부 파일"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/showImg"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingTop="18dp"
            android:paddingBottom="36dp"
            android:paddingLeft="4dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/storeRegStoreLayoutText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="10dp"
                android:clickable="true"
                android:text="배치도 등록 "
                android:textColor="#FF000000"
                android:textSize="20dp" />

            <Button
                android:id="@+id/storeRegStoreLayoutImgBtn"
                android:background="@drawable/click_button"
                android:layout_width="114dp"
                android:layout_height="46dp"
                android:clickable="true"
                android:text="첨부 파일"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/showLayoutImg"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingTop="26dp"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/storeCreateBtn"
            android:background="@drawable/click_button"
            android:layout_width="102dp"
            android:layout_height="46dp"
            android:text="등록"
            android:textSize="18dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical" >

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/storeRegist_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:menu="@menu/navigation2" />
    </LinearLayout>

</LinearLayout>
