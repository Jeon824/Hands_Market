<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StoreDetailActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_border"
        android:layout_marginTop="50px"
        android:layout_marginBottom="50px"
        android:layout_gravity="center"
        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/store_detail_image"
            android:src="@drawable/ic_baseline_storefront_24"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:id="@+id/store_detail_store_name"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="가게명:"
            android:textColor="#000000"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            />
        <TextView
            android:id="@+id/storeAddress"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="주소:"
            android:textColor="#000000"
            android:textAlignment="textStart"
            android:textSize="12sp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"
            />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <Button
                android:id="@+id/button_call"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:background="@drawable/border_bottom"
                android:text="직원call"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"/>

            <Button
                android:id="@+id/button_storeLayout"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="100dp"
                android:layout_height="43dp"
                android:background="@drawable/border_bottom"
                android:text="배치도 보기"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginEnd="10dp"
                />
        </LinearLayout>
   </LinearLayout>
    <Button
        android:id="@+id/button_storeState_change"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:text="가게정보 수정/삭제"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        />

    <Button
        android:id="@+id/button_goodsAdd"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom"
        android:text="물품+"
        android:textColor="#000000"
        android:textSize="20sp"
        android:layout_marginEnd="10dp"
        android:layout_gravity="end"
        />
    <fragment
        android:name="com.example.hands_market.GoodsListFragment"
        android:id="@+id/store_detail_goods_fragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/navigation"
        android:id="@+id/bottom_navigation"/>
</LinearLayout>